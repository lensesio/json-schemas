{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kafka Quota",
  "type": "object",
  "properties": {
    "entityType": {
      "type": "string",
      "enum": ["user", "client-id"],
      "description": "Entity type"
    },
    "entityName": {
      "type": "string",
      "description": "Entity name (user or client-id)"
    },
    "producerByteRate": {
      "type": "integer",
      "description": "Producer byte rate quota (bytes/sec)"
    },
    "consumerByteRate": {
      "type": "integer",
      "description": "Consumer byte rate quota (bytes/sec)"
    },
    "requestPercentage": {
      "type": "number",
      "description": "Request percentage quota"
    }
  },
  "required": ["entityType", "entityName"]
}