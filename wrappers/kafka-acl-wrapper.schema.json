{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kafka ACL Wrapper",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "default": "kafka.lenses.io/v1"
    },
    "kind": {
      "type": "string",
      "default": "KafkaAcl"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "environment": { "type": "string" },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "description": { "type": "string" }
      },
      "required": ["name"]
    },
    "spec": {
      "$ref": "../kafka/kafka-acl.schema.json"
    }
  },
  "required": ["apiVersion", "kind", "metadata", "spec"]
}